---
import { isLocalAsset } from '@/util'
import type { ImageMetadata } from 'astro'
import { Image } from 'astro:assets'

export interface Props {
  src: string | ImageMetadata
  alt: string
  height?: number
  width?: number
  class: string
}

const { src, alt, class: className, ...rest } = Astro.props
---

{
  isLocalAsset(src) ? (
    <Image {src} class={className} loading="eager" {alt} {...rest} />
  ) : (
    <img {src} class={className} {alt} loading="eager" {...rest} />
  )
}
